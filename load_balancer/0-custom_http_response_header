#!/usr/bin/env bash
# Script to configure Nginx with custom HTTP header X-Served-By
# The value of X-Served-By is the hostname of the server

# Update packages and install nginx if not already installed
apt-get -y update
apt-get -y install nginx

# Enable and start nginx service
systemctl enable nginx
systemctl start nginx

# Allow Nginx through the firewall
ufw allow 'Nginx HTTP'

# Create necessary directories if they don't exist
mkdir -p /var/www/html

# Create a simple index.html file
echo "Hello World!" > /var/www/html/index.html

# Get the hostname of the server
HOSTNAME=$(hostname)

# Configure Nginx with custom header
CONFIG_FILE="/etc/nginx/sites-available/default"

# Make a backup of the original configuration
cp $CONFIG_FILE ${CONFIG_FILE}.backup

# Add the custom header to the Nginx configuration
# We're adding it after the server_name directive
sed -i "/server_name _;/a \\\tadd_header X-Served-By $HOSTNAME;" $CONFIG_FILE

# Test Nginx configuration
nginx -t

# Restart Nginx to apply changes
systemctl restart nginx

exit 0
