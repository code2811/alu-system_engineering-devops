#!/usr/bin/env bash
# Script to install and configure HAProxy as a load balancer

# Update packages
apt-get -y update
apt-get -y install software-properties-common

# Add HAProxy repository and install HAProxy 2.0
add-apt-repository -y ppa:vbernat/haproxy-2.0
apt-get -y update
apt-get -y install haproxy

# Enable HAProxy to be started by init script
echo "ENABLED=1" > /etc/default/haproxy

# Create a backup of the original config
cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.backup

# Configure HAProxy
cat > /etc/haproxy/haproxy.cfg << EOF
global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server web-01 [STUDENT_ID]-web-01:80 check
    server web-02 [STUDENT_ID]-web-02:80 check
EOF

# Replace [STUDENT_ID] with your actual student ID
# You need to replace the student ID with your actual ID
# or use the actual IP addresses of your web servers
sed -i "s/\[STUDENT_ID\]-web-01/$(dig +short [STUDENT_ID]-web-01)/" /etc/haproxy/haproxy.cfg
sed -i "s/\[STUDENT_ID\]-web-02/$(dig +short [STUDENT_ID]-web-02)/" /etc/haproxy/haproxy.cfg

# Start HAProxy service
service haproxy restart

exit 0
