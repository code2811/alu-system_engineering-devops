#!/usr/bin/env bash
# Script to fix Nginx to listen on port 80

# Find out what port Nginx is configured to listen on
sed -i 's/listen 8080/listen 80/g' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:8080/listen [::]:80/g' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
service nginx restart

# Exit with code 2 as required
exit 2
