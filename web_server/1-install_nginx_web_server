#!/usr/bin/env bash
# This script installs Nginx, configures it to listen on port 80, and serves a page with "Holberton School"

# Update package list and install Nginx
apt-get update -y
apt-get install nginx -y

# Ensure Nginx is listening on port 80
# Start Nginx service without using systemctl
service nginx start

# Modify the default page to include "Holberton School"
echo "Holberton School for the win!" > /var/www/html/index.html

# Restart Nginx (again using service, not systemctl)
service nginx restart

# Check if the server responds with HTTP status 200 and the expected content
response=$(curl -sI localhost)

# Check if the response contains "HTTP/1.1 200 OK" and "Holberton School"
if echo "$response" | grep -q "HTTP/1.1 200 OK" && curl -s localhost | grep -q "Holberton School for the win!"; then
    echo "Nginx is running and returning 200 OK with the correct content."
else
    echo "Nginx is not configured properly."
fi

