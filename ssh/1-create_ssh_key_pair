#!/usr/bin/env bash
# This script creates an RSA private/public key pair with 4096 bits and saves it as 'school'.
# The private key is protected by the passphrase 'betty'.

# Generate the key pair with a passphrase
ssh-keygen -t rsa -b 4096 -f ~/.ssh/school -N "betty"

# Output a message confirming the success
echo "RSA key pair generated: ~/.ssh/school (private) and ~/.ssh/school.pub (public)"


